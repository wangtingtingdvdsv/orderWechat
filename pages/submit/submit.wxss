/* 提交订单页面 */
page{
  background-color: #E8E8E8;
}
/* 用户地址及电话信息 */
.peopleInfoMoudle{
  position: relative;
  margin: 0 auto;
  margin-top: 20rpx;
  width: 95%;
  height: 270rpx;
  background-color: #ffffff;
}
/* 用户位置信息 */
.peopleInfoMoudleLocation{
  position: relative;
  width: 100%;
  height: 170rpx;
  border-bottom: 2rpx solid #E5E5E7; 
}
/* 位置图标 */
.locationIconBox{
  width: 80rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center; 
}
.locationIcon{
  height: 50rpx;
  width: 50rpx;
}
/* 用户姓名以及电话 */
.details{
  position: absolute;
  left: 80rpx;
  top: 50%;
  margin-top: -50rpx;
}
/* 用户选择时间信息 */
picker {
  display: block;
}
.time{
  height: 100%;
  width: 100%;
  line-height: 86rpx;
  position: absolute;
  left: 80rpx;
  bottom: -10rpx;
}
.arrow{
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  top: 65rpx;
  right:40rpx;
}
.timeArrow{
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  bottom: 20rpx;
  right:40rpx;
}
.deliveryTime{
  position: relative;
  width: 100%;
  height: 86rpx;
}
.timeIconBox{
  padding:25rpx;
}
/* 时间图标 */
.timeIcon{
  height: 50rpx;
  width: 50rpx;
}
/* 用户订单菜品信息 */
.mealInfoMoudle{
  padding: 0 20rpx;
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
  background-color: #ffffff;
}
/* 医院名称 */
.name{
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid gray; 
}
/* 订单详情信息 */
.mealName{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* 下单数量 */
.num{
  position: absolute;
  right: 49%;
}
/* 下单总计费用 */
.totalMoney{
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  height: 100rpx;
  color:red;
  border-top: 1rpx solid gray; 
}

/* 提交订单按钮 */
.submit{
  background-color: #13BA84;
  height: 100rpx;
  position: fixed;
  width: 100%;
  bottom: 0;
  color: #ffffff;
}

